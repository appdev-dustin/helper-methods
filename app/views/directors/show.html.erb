<div>
  <div>
    <h1>
      director #<%= @director.id %> details
    </h1>

    <div>
      <div>
        <%= link_to 'Go back', directors_path %>
      </div>

      <div>
        <%= link_to 'Edit director', edit_director_path(@director.id) %>
      </div>

      <div>
        <a href="<%= director_path(@director.id) %>" data-method="delete">
          Delete director
        </a>

      </div>
    </div>

    <dl>
      <dt>
        name
      </dt>
      <dd>
        <%= @director.name %>
      </dd>

      <dt>
        bio
      </dt>
      <dd>
        <%= @director.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
